{{#if addNewRental}}
  <h1>New Rental</h1>
    <div>
      <form >
        <div class="form-group">
          <label for="owner">Owner</label>
          {{input class="form-control" value=owner id="owner"}}
        </div>
        <div class="form-group">
          <label for="type">Type</label>
          {{input class="form-control" value=type id="type"}}
        </div>

        <div class="form-group">
          <label for="bedrooms">Number of Bedrooms</label>
          {{input class="form-control" value=bedrooms id="bedrooms"}}
        </div>
        <div class="form-group">
          <label for="image">Image URL</label>
          {{input class="form-control" value=image id="image"}}
        </div>
        <div class="form-group">
          <label for="cost">Cost per night</label>
          {{input class="form-control" value=cost id="cost"}}
        </div>

        <button class="btn btn-success" {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
  <button class="btn btn-info btn-lg" {{action 'rentalFormShow'}}>New Rental</button>
{{/if}}
