<h1>Welcome to Super Rentals!</h1>

<p>We hope you find exactly what you're looking for in a place to stay.</p>
<div class="row">
  <div class="col-sm-6">
    <ul class="list-group">
      {{#each model.rentals as |rental|}}
        {{rental-tile rental=rental destroyRental="destroyRental" update="update"}} {{rental-cost rental}}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-6">

  <h2>Cities</h2>
  {{add-city save="save"}}
  <ul>
    {{#each  model.cities as |city|}}
      <li>{{city-popularity city}} {{#link-to 'city' city.id}}{{city.name}}{{/link-to}}</li>
    {{/each}}
  </ul>

</div>
</div>
